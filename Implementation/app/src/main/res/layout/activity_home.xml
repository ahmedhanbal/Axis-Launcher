<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/headerButtonsLayout"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/greetingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Good Morning"
                        android:textSize="24sp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/dateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="November 21, 2025"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/headerButtonsLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivProfile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_person"
                        app:civ_border_width="1dp"
                        app:civ_border_color="#FFFFFF"
                        android:layout_marginEnd="8dp"/>

                    <ImageButton
                        android:id="@+id/btnNotifications"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_placeholder_notification"
                        android:background="@drawable/icon_placeholder_bg"
                        android:contentDescription="Notifications"
                        android:layout_marginEnd="8dp"/>

                    <ImageButton
                        android:id="@+id/btnSettings"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_placeholder_settings"
                        android:background="@drawable/icon_placeholder_bg"
                        android:contentDescription="Settings" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Search Bar -->
            <LinearLayout
                android:id="@+id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_search_bg"
                android:elevation="2dp"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_placeholder_search"
                    android:contentDescription="Search"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Search apps..."
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorTertiary"/>
            </LinearLayout>

            <!-- Favorite Apps Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorites"
                android:textSize="18sp"
                android:textColor="?android:attr/textColorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/favoriteAppsRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>

            <!-- Recent Apps Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Apps"
                    android:textSize="18sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/viewAllApps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All >"
                    android:textSize="14sp"
                    android:textColor="#6D64F3"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recentAppsRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button for App Drawer -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAppDrawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="16dp"
        android:src="@drawable/ic_placeholder_apps"
        app:tint="@android:color/white"
        app:backgroundTint="#6D64F3"
        android:contentDescription="App Drawer"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
