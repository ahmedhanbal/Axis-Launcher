<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#FF6D00"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_white"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:padding="8dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Customize"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <ImageView
            android:id="@+id/ivSave"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_check_white"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Save"
            android:padding="8dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Edit Mode Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="#FFF3E0">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_edit"
                        android:contentDescription="Edit"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Mode Active"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FF6D00"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Long press and drag apps to rearrange"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Layout Settings Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Layout Settings"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="12dp"/>

            <!-- Grid Size -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardGridSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/ivGridIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_grid"
                        android:contentDescription="Grid"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/ivGridIcon"
                        android:layout_toStartOf="@id/tvGridSize"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_centerVertical="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grid Size"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvGridSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4x4"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        android:contentDescription="Arrow"
                        android:layout_toStartOf="@id/tvGridSize"
                        android:layout_marginEnd="8dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Icon Size -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardIconSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/ivIconSizeIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_resize"
                        android:contentDescription="Icon Size"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/ivIconSizeIcon"
                        android:layout_toStartOf="@id/tvIconSize"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_centerVertical="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Icon Size"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvIconSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medium"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        android:contentDescription="Arrow"
                        android:layout_toStartOf="@id/tvIconSize"
                        android:layout_marginEnd="8dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- App Labels -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAppLabels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/ivLabelsIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_label"
                        android:contentDescription="Labels"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/ivLabelsIcon"
                        android:layout_toStartOf="@id/tvAppLabels"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_centerVertical="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="App Labels"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvAppLabels"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show below icons"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        android:contentDescription="Arrow"
                        android:layout_toStartOf="@id/tvAppLabels"
                        android:layout_marginEnd="8dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Save Button -->
            <Button
                android:id="@+id/btnSaveLayout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Save Layout"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#FF6D00"
                app:cornerRadius="28dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
